{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  "github": {
    "silent": true
  },
  "cron": {
    "version": 2,
    "builds": [
      {
        "src": "updateStreaks.js",
        "use": "@vercel/node"
      }
    ],
    "jobs": [
      {
        "name": "updateStreaks",
        "command": "node updateStreaks.js",
        "schedule": "0 0 * * *"
      }
    ]
  }
}
